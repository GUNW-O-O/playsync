generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  USER
  STORE_ADMIN
  PLATFORM_ADMIN
}

enum SessionType {
  TOURNAMENT
  SIT_AND_GO
}

enum SessionStatus {
  PENDING
  ONGOING
  FINISHED
}

model User {
  id        String   @id @default(uuid())
  nickname  String   @unique
  password  String
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participations SessionParticipation[]
  tablePlayers   TablePlayer[]
  stores         Store[]
}

model Store {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())

  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String

  physicalTables PhysicalTable[]
  sessions       GameSession[]
}

model PhysicalTable {
  id        String @id @default(uuid())
  number    Int
  seatCount Int

  store   Store  @relation(fields: [storeId], references: [id] onDelete: Cascade)
  storeId String

  sessionTables SessionTable[]

  @@unique([storeId, number])
}

model GameSession {
  id        String        @id @default(uuid())
  type      SessionType
  status    SessionStatus @default(PENDING)

  startStack Int
  blindTime  Int

  currentLevel Int          @default(1)
  lastBlindUpAt DateTime?

  createdAt DateTime @default(now())
  startedAt DateTime?
  finishedAt DateTime?

  store   Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)
  storeId String

  sessionTables SessionTable[]
  participations SessionParticipation[]

  tournament Tournament?
  sitAndGo   SitAndGo?
}

model Tournament {
  id String @id

  blindStructure Json?

  maxPlayers   Int
  allowRebuy   Boolean @default(false)
  rebuyUntilLv Int?

  registrationEndAt DateTime?

  session GameSession @relation(fields: [id], references: [id], onDelete: Cascade)
}

model SitAndGo {
  id String @id

  minPlayers Int
  maxPlayers Int

  session GameSession @relation(fields: [id], references: [id], onDelete: Cascade)
}

model SessionParticipation {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  session   GameSession @relation(fields: [sessionId], references: [id])
  sessionId String

  buyInCount Int @default(1)
  totalBuyIn Int

  finalRank   Int?
  prizeAmount Int?

  eliminatedAt DateTime?

  createdAt DateTime @default(now())

  @@unique([userId, sessionId])
}

model SessionTable {
  id String @id @default(uuid())

  session   GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId String

  dealerCode String?       // 예: "1234" (매장 관리자 화면에 표시)
  dealerToken String?     @unique // 실제 태블릿 브라우저 세션 인증용 (UUID)

  physicalTable   PhysicalTable @relation(fields: [physicalTableId], references: [id])
  physicalTableId String

  tablePlayers TablePlayer[]
}

model TablePlayer {
  id String @id @default(uuid())

  sessionTable   SessionTable @relation(fields: [sessionTableId], references: [id], onDelete: Cascade)
  sessionTableId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  seatPosition Int
  currentStack Int
  isBusted     Boolean @default(false)

  joinedAt DateTime @default(now())

  @@unique([sessionTableId, seatPosition])
}